<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<!-- HEX(AES_ENCRYPT(#{pw}, SHA2('password',512))) -->
	<select id="getuserone" parameterType="uservo" resultType="uservo">
	<![CDATA[
		select * from member where id=#{id}
	]]>
	</select>
	
	<select id="getuseronefromno" parameterType="uservo" resultType="uservo">
	<![CDATA[
		select * from member where no=#{no}
	]]>
	</select>

	<!-- 회원가입 -->
	<insert id="insert" parameterType="uservo">
	<![CDATA[
			insert into member 
			values(null, #{id}, #{email}, #{pw}, #{name}, #{nickname}, #{addr} ,#{tell_ph}, #{cell_ph}, now(), 100, 0, #{birthday}, 0, 1, #{email_recv}, #{sms_recv}, 0, false)
		]]>
		<!-- 넘어오는 uservo에 no를 셋팅해준다. -->
		<selectKey keyProperty="no" resultType="long" order="AFTER">
		<![CDATA[
			select last_insert_id()		
		]]>
		</selectKey>
	</insert>

	<!-- 비회원 주소 추가 -->
	<insert id="nonMemberInsert" parameterType="nonuservo">
	<![CDATA[
			insert into non_member 
			values(null, #{mac_addr})
		]]>
		<selectKey keyProperty="no" resultType="long" order="AFTER">
		<![CDATA[
			select last_insert_id()		
		]]>
		</selectKey>
	</insert>

	<!-- 비회원 테이블 번호 받아오기 -->
	<select id="getNonMemberNo" parameterType="nonuservo"
		resultType="nonuservo">
	<![CDATA[
			select no from non_member where mac_addr=#{mac_addr}
		]]>
	</select>

	<select id="getuser" parameterType="uservo" resultType="uservo">
	<![CDATA[
			select * from member where id=#{id}
	]]>
	</select>

	<select id="pwforlogin" parameterType="uservo"
		resultType="uservo">
	<![CDATA[
		select pw from member where id=#{id};
	]]>
	</select>
	<!-- UserLogin -->
	<select id="loginUser" parameterType="uservo"
		resultType="uservo">
	<![CDATA[
		select no from member where id=#{id} and pw=HEX(AES_ENCRYPT(#{pw}, SHA2('password',512)))
	]]>
	</select>

	<!-- ID 유무 검사 -->
	<select id="userIdCheck" parameterType="uservo"
		resultType="uservo">	
		<![CDATA[
			select id from member where id = #{id}		
		]]>
	</select>

	<!-- 회원 정보 수정 -->
	<update id="modifyUser" parameterType="uservo">
	<![CDATA[
		update member set
		email=#{email},
		]]>
		<if test="pw!=''">
		<![CDATA[
		pw=#{pw},
		]]>
		</if>
		<![CDATA[
		nickname=#{nickname},
		tell_ph=#{tell_ph},
		cell_ph=#{cell_ph},
		addr=#{addr},
		email_recv=#{email_recv},
		sms_recv=#{sms_recv}
	]]>
	</update>

	<delete id="delete" parameterType="uservo">
	<![CDATA[
		delete from member where no = #{no}
	]]>
	</delete>
</mapper>